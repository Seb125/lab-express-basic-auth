{{!-- views/users/user-profile.hbs --}}

{{!-- // you would use a cookie to save the id  --}}
<div class="container mt-4">
  {{#if userInSession}}
    <h2>Welcome, {{ userInSession.username }}!</h2>
    <p>This is your profile page, my friend!</p>

    <!-- Reload button -->
    <button class="btn btn-primary">
      <a href="/userProfile" class="text-white">Reload the page</a>
    </button>

    <!-- Profile Picture -->
    <img src="/images/{{userInSession.picture}}" alt="Profile Picture" class="img-thumbnail mt-3">

    <!-- File Upload Form -->
    <form enctype="multipart/form-data" action="/picture" method="POST" class="mt-3">
      <div class="form-group">
        <label for="picture">Change your profile picture:</label>
        <input id="picture" type="file" name="picture" class="form-control-file">
      </div>
      <button type="submit" class="btn btn-primary">Upload picture</button>
    </form>



  <a href="/rickAndMorty">Choose some Rick and Morty pictures for your profile here!</a>

  <div class="container">
        <h1>Character Cards</h1>
        <div class="row">
            {{#each characters}}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{image}}" class="card-img-top" alt="{{name}}">
                        <div class="card-body">
                            <h5 class="card-title">{{id}} {{name}}</h5>
                            <p class="card-text">
                                <strong>Species:</strong> {{species}}<br>
                                <strong>Gender:</strong> {{gender}}
                            </p>

                            <form action="/rickAndMorty" method="POST">
                            <input type="hidden" name="characterId" value="{{id}}">
                            <button type="submit" class="btn btn-primary">Add to my Home Page</button>
                        </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
  {{else}}
    <br>
    <p class="alert alert-warning">Still no logged-in user, sorry!</p>
  {{/if}}
</div>


